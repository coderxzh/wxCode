/* pages/upload/upload.wxss */
.upload {
  display: flex;
  padding: 5px 15px;
  flex-direction: column;
}
.top{
  height: 30px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}
.top button{
  margin: 0;
  padding: 0;
  height: 70rpx;
  width: 150rpx;
  float: right;
  border: none;
  border-radius: 25px;
  line-height: 70rpx;
  color: #fff;
  font-size: 14px;
  background-color: #409EFF;
  
}
.upload .message{
  font-size: 14px;
  overflow: auto;
 word-break:break-all;
 margin-bottom: 20px;
 height: 110px;
}
.loading{
  position: absolute;
  top: 30px;
  left: 50%;
  transform: translateX(-50%);
}