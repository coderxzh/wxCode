.header{
    height: 100px;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: left;
}
.header image{
    height: 130rpx;
    width: 130rpx;
    border-radius: 50%;
    background-color: #ccc;
    margin-right: 25rpx;
}
.header text {
    margin: 10rpx 0;
}
.header .nickName{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
    font-size: 13px;
}
.main{
    height: 210px;
    background-color: #fff;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
}
.main view{
    flex:1;
    padding: 0 30rpx;
    line-height: 42px;
    font-size: 14px;
}
.logout{
    height: 42px;
    display: flex;
    justify-content: center;
    margin: 15px 0;
    background-color: #fff;
    color: rgb(253, 70, 70);
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
    line-height: 42px;
    font-size: 14px;
}
.toLogin{
margin: 0 15px;


}
.arrow{
    position: absolute;
    top: 45px;
    right: 10px;
}